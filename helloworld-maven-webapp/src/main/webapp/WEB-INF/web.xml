<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

  <!-- 配置当前Web应用的初始化参数 -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:spring-config.xml</param-value>
  </context-param>

  <context-param>
    <param-name>driver</param-name>
    <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>jdbcUrl</param-name>
    <param-value>jdbc:mysql://192.168.155.106:3306/addressinfo?useUnicode=true&amp;characterEncoding=UTF-8</param-value>
  </context-param>

  <context-param>
    <param-name>username</param-name>
    <param-value>zxj</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>111</param-value>
  </context-param>

  <!-- 配置和映射servlet  start -->
  <servlet>
    <servlet-name>lifeCycleServlet</servlet-name>
    <servlet-class>com.zxj.helloworld.protoservlet.LifeCycleServlet</servlet-class>

    <!-- 配置 ServletConfig 初始化参数 (这个节点必须在load-on-startup的前面) start -->
    <init-param>
      <param-name>aaa</param-name>
      <param-value>abc</param-value>
    </init-param>
    <init-param>
      <param-name>user</param-name>
      <param-value>zhaoxiujie</param-value>
    </init-param>
    <init-param>
      <param-name>pwd</param-name>
      <param-value>zxjpassword</param-value>
    </init-param>
    <init-param>
      <param-name>zoo</param-name>
      <param-value>animal zoo</param-value>
    </init-param>
    <!-- ServletConfig 初始化参数  end -->

    <load-on-startup>-1</load-on-startup> <!-- 值大于等于0时，服务器一启动就调该Servlet的构造器和init。 -->
  </servlet>

  <servlet-mapping>
    <servlet-name>lifeCycleServlet</servlet-name>
    <url-pattern>/lifecycle</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.zxj.helloworld.protoservlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>loginHttpServlet</servlet-name>
    <servlet-class>com.zxj.helloworld.protoservlet.LoginHttpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginHttpServlet</servlet-name>
    <url-pattern>/loginHttpServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>loginMyGenericServlet</servlet-name>
    <servlet-class>com.zxj.helloworld.protoservlet.LoginMyGenericServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginMyGenericServlet</servlet-name>
    <url-pattern>/loginMyGenericServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>loginMyHttpServlet</servlet-name>
    <servlet-class>com.zxj.helloworld.protoservlet.LoginMyHttpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginMyHttpServlet</servlet-name>
    <url-pattern>/loginMyHttpServlet</url-pattern>
  </servlet-mapping>
  <!-- 配置和映射servlet  end -->

</web-app>
